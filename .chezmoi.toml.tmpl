{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
{{-   $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- $email := promptStringOnce . "email" "Email address" -}}

[data]
    osid = {{ $osid | quote }}
    email = {{ $email | quote }}

[editor]
    command = "code"
    args = ["--wait"]

[diff]
    command = "code"
    arg = ["--wait", "--diff", "--new-window"]
