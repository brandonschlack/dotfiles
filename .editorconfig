[*]
indent_style             = space
indent_size              = 4
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
shell_variant            = bash
binary_next_line         = true
switch_case_indent       = true
space_redirects          = true

[*gitconfig]
indent_size = 4
ignore      = true

[*.{yml,yaml,json,jsonc}]
indent_style = space
indent_size  = 2
